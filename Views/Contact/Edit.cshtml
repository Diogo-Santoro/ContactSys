@{
    ViewData["Title"] = "Contact Edit";
}

<div class="text-center">

    <h1 class="display-4">Contact Creation</h1>

</div>


<form>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" placeholder="Enter the contact's name">
        <small class="form-text text-muted">Please, text the whole name.</small>
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" placeholder="Enter the contact's e-mail">
    </div>

    <div class="form-group">
        <label for="cellphone">Cellphone</label>
        <input type="text" class="form-control" placeholder="Enter the contact's cellphone">
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Edit</button>
    <a class="btn btn-secondary" asp-controller="Contact" asp-action="Index" role="button">Back</a>
</form>